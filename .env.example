# Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to GitHub

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/balloond
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_SECRET=GENERATE_A_STRONG_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_ANOTHER_STRONG_SECRET_HERE
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_id_here
CLOUDFRONT_KEY_PAIR_ID=your_key_pair_id_here
CLOUDFRONT_PRIVATE_KEY=your_private_key_here
CDN_URL=https://cdn.yourdomain.com

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_MONTHLY=price_your_monthly_price_id
STRIPE_PRICE_ID_YEARLY=price_your_yearly_price_id

# Apple In-App Purchase
APPLE_SHARED_SECRET=your_apple_shared_secret_here
APPLE_BUNDLE_ID=com.yourcompany.balloond

# Google Play Billing
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON={"type":"service_account"...}
GOOGLE_PLAY_PACKAGE_NAME=com.yourcompany.balloond

# OpenAI API (for moderation)
OPENAI_API_KEY=sk-your_openai_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key_here
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apns_team_id_here
APNS_KEY_PATH=./certs/apns-key.p8

# Analytics (Optional - can be added later)
MIXPANEL_TOKEN=your_mixpanel_token_here
SEGMENT_WRITE_KEY=your_segment_key_here
AMPLITUDE_API_KEY=your_amplitude_key_here

# Monitoring (Optional - can be added later)
SENTRY_DSN=https://your_key@sentry.io/your_project
DATADOG_API_KEY=your_datadog_api_key_here
DATADOG_APP_KEY=your_datadog_app_key_here

# Email Service
SENDGRID_API_KEY=SG.your_sendgrid_key_here
EMAIL_FROM=noreply@balloond.app

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Environment
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Expo (Frontend)
EXPO_PUBLIC_API_URL=http://localhost:8000
EXPO_PUBLIC_WS_URL=ws://localhost:8000
