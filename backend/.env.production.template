# Production Environment Variables for Railway Deployment
# Copy this to .env and fill with your actual values
# NEVER commit .env to GitHub!

# ====================
# DATABASE (Required - Get from Supabase)
# ====================
DATABASE_URL="postgresql://postgres:[YOUR_SUPABASE_PASSWORD]@db.[YOUR_PROJECT_ID].supabase.co:5432/postgres?pgbouncer=true&connection_limit=1"

# ====================
# AUTHENTICATION (Required - Generate these!)
# ====================
JWT_SECRET="[GENERATE_WITH: openssl rand -base64 32]"
JWT_EXPIRES_IN="7d"

# ====================
# SERVER (Required)
# ====================
PORT=3000
NODE_ENV=production
CORS_ORIGIN="*"

# ====================
# SUPABASE (Required for storage)
# ====================
SUPABASE_URL="https://[YOUR_PROJECT_ID].supabase.co"
SUPABASE_ANON_KEY="[GET_FROM_SUPABASE_DASHBOARD]"
SUPABASE_SERVICE_KEY="[GET_FROM_SUPABASE_DASHBOARD]"

# ====================
# REDIS (Leave as-is for now)
# ====================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# ====================
# AWS S3 (Optional - Phase 2)
# ====================
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"

# ====================
# STRIPE (Optional - Phase 2)
# ====================
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# ====================
# FIREBASE (Optional - Phase 2)
# ====================
FIREBASE_PROJECT_ID=""
FIREBASE_CLIENT_EMAIL=""
FIREBASE_PRIVATE_KEY=""

# ====================
# GOOGLE OAUTH (Optional)
# ====================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL=""

# ====================
# RATE LIMITING
# ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================
# APP CONFIG
# ====================
APP_NAME="Balloon'd"
APP_URL="https://your-app.up.railway.app"
SUPPORT_EMAIL="support@balloond.com"
FREE_DAILY_POPS=5
GOLD_DAILY_POPS=15
GLOWING_DAILY_POPS=999
