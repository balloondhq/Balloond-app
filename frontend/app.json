{
  "expo": {
    "name": "Balloon'd",
    "slug": "balloond",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#8B1A1A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.balloond.app",
      "buildNumber": "2.0.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Balloon'd needs your location to show you potential matches nearby.",
        "NSCameraUsageDescription": "Balloon'd needs camera access to take profile photos.",
        "NSPhotoLibraryUsageDescription": "Balloon'd needs photo library access to select profile photos.",
        "NSMicrophoneUsageDescription": "Balloon'd needs microphone access to record voice messages.",
        "UIBackgroundModes": ["audio", "fetch", "remote-notification"]
      },
      "entitlements": {
        "aps-environment": "production"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#8B1A1A"
      },
      "package": "com.balloond.app",
      "versionCode": 2,
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#8B1A1A",
          "sounds": [
            "./assets/sounds/notification.wav",
            "./assets/sounds/voice_notification.wav",
            "./assets/sounds/match_notification.wav"
          ],
          "mode": "production"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Balloon'd to access your microphone for voice messages."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Balloon'd to use your location to find matches nearby."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Balloon'd to access your photos for your profile.",
          "cameraPermission": "Allow Balloon'd to access your camera to take photos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      },
      "apiUrl": "https://balloond-app-production.up.railway.app",
      "wsUrl": "wss://balloond-app-production.up.railway.app",
      "stripePublishableKey": "pk_live_YOUR_STRIPE_KEY",
      "environment": "production",
      "features": {
        "voiceMessages": true,
        "pushNotifications": true,
        "subscriptions": true,
        "aiModeration": true,
        "profileVerification": true
      },
      "limits": {
        "maxVoiceDuration": 60,
        "maxPhotoSize": 10485760,
        "maxPhotosPerProfile": 6,
        "maxMessageLength": 500
      },
      "subscriptionTiers": {
        "free": {
          "dailyPops": 5,
          "voiceMessageDuration": 30
        },
        "gold": {
          "dailyPops": 15,
          "voiceMessageDuration": 60
        },
        "glowing": {
          "dailyPops": 999,
          "voiceMessageDuration": 60
        }
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/YOUR_PROJECT_ID"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "scheme": "balloond"
  }
}
